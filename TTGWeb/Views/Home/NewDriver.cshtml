@{
    ViewData["Title"] = "Новый водитель";
    Layout = "_LayoutMain";
}
<body onload="SelectOptionOnNewDriver()">
    <h1 align="center">Добавление нового водителя</h1>
    <br>
    <form method="post" style="margin-left:10rem; margin-right:5rem">
        <div style="width:70%">
            <div>
                <span style="font-size: 15pt">ФИО</span>
                <input class="form-control" style="text-align: left;" id="newDriverName" />
                <br>
            </div>
            <span style="font-size: 15pt">Паспортные данные</span> <br><br>
            <div style="display: flex">
                <div> <label>Серия</label><input class="form-control" style="text-align: left;" id="passportSerial" /></div>
                <div style="margin-left: 10px"> <label>Номер</label> <input class="form-control" style="text-align: left;" id="passportNum" /></div>

            </div>
            <br>
            <div>
                <span style="font-size: 15pt">Номер маршрута</span>
                <select class="btnLogin btn btn-light" name="route" id="route" onchange="GetRoutesOnNewDriver()"> </select>
            </div>
            <br>
            <div>
                <span style="font-size: 15pt">Марка автомобиля</span>
                <input class="form-control" style="text-align: left;" id="newAutoMarka" />
                <br>
            </div>

            <div>
                <span style="font-size: 15pt">Гос номер автомобиля</span>
                <input class="form-control" style="text-align: left;" id="newAutoNum" />
                <br>
            </div>

            <div>
                <span style="font-size: 15pt">Логин</span>
                <input class="form-control" runat="server" style="text-align: left;" id="newDriverLogin" />
                <br>
            </div>
            <div>
                <span style="font-size: 15pt">Пароль</span>
                <input class="form-control" runat="server" style="text-align: left;" id="newDriverPassword" />
                <br>
            </div>

        </div>
        <br>

        <div style="display:flex">
            <br>
            <div>
                <a class="btnLogin btn btn-light" asp-route-login=@ViewBag.Login onclick="javascript:history.back(); return false;">Назад</a>
            </div>
            <div style="margin-left:10px">
                <a class="btnLogin btn btn-light" onclick="SaveDriver()">Сохранить</a>

            </div>
        </div>

    </form>
    <br>

</body>

