@{
    ViewData["Title"] = "Мои маршруты";
    Layout = "_LayoutMain";
}

<body onload="SelectOptionOnMyRoutes()">
    <script src="https://api-maps.yandex.ru/2.1/?apikey=35171b98-e159-494e-9a49-fb4f12e60d78&lang=ru_RU"
        type="text/javascript"></script>
    <script src="placemark.js" type="text/javascript"></script>
    <div style="display:flex">
        <label for="routeOnMyRoutes" style="font-size: 24px; margin-right: 24px;">Выберете маршрут</label>
        <select class="btnLogin btn btn-light" name="route" id="routeOnMyRoutes"
            onchange="GetRoutesOnMyRoutes()"></select>
        <br>
        <a class="btnLogin btn btn-light" style="margin: 0 15px;" href="../Home/NewRoute">Добавить новый маршрут</a>
    </div>
    <br>
    <br>
    <div id="main">
    </div>
    <div id="hidden_div">
        <div id="null" style=display:none> </div>
        <div id="notnull" style=display:none>
            <div class="div-inline">
                <div>
                    <div id="mapMyRoute" style="width: 600px; height: 400px"></div>
                </div>
                <div style="margin-left: 30px">
                    <div>
                        <h3 align="center">
                            <span><b>Маршрут №</b></span>
                            <span id="routename"><b></b></span>
                        </h3>
                        <br>
                    </div>
                    <div style="font-size:14pt">
                        <span><b>Стоимость проезда</b></span>
                        <span id="priceforpassangers"></span>
                    </div>
                    <div style="font-size:14pt">
                        <span><b>Стоимость аренды</b></span>
                        <span id="pricefordriver"></span>
                    </div>
                    <div style="font-size:14pt">
                        <span> <b>О водителях: </b></span>
                        <br>
                        <table id="tabledriver" class="table">
                            <tr>
                                <th>№</th>
                                <th>ФИО</th>
                                <th>Гос номер автомобиля</th>
                                <th>Марка автомобиля</th>
                                <th>Состояние</th>
                            </tr>
                            <!--ряд с ячейками заголовков-->
                        </table>
                        <br>
                        <a class="btnLogin btn btn-light" href="../Home/Editing">Отредактировать</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
